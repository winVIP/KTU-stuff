@model vytkun.ViewModels.DalyvisEditViewModel

@{
    ViewBag.Title = "Dalyvio redagavimas";
}

<h2>Dalyvio redagavimas</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Dalyvio informacija</legend>
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.fk_projektas)


            <div class="form-group">
                @Html.LabelFor(model => model.vardas, htmlAttributes: new { @class = "control-label col-md-2" })
