    ViewBag.Title = "Delete";
}

<h2>Projekto šalinimas</h2>

<h3>Ar tikrai norite pašalinti šį projekta?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.pavadinimas)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pavadinimas)
        </dd>
    </dl>

