@model IEnumerable<vytkun.ViewModels.ProjektasListViewModel>

@{
    ViewBag.Title = "Projektai";
}

<h2>Projektai</h2>

<p>
    @Html.ActionLink("Naujas Projektas", "Create", "Projektas", new { @class = "btn btn-success" })
</p>
<table class="table table-striped datatable">
    <thead>
        <tr style="background-color: lightblue">
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pavadinimas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nuo_kada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.iki_kada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.uzsakovas)
            </th>
            <th style="width: 18%"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pavadinimas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nuo_kada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iki_kada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.uzsakovas)
            </td>
            <td>
                @Html.ActionLink("Redaguoti", "Edit", new { id = item.id }, new { @class = "btn btn-primary action" })
                @Html.ActionLink("Šalinti", "Delete", new { id = item.id }, new { @class = "btn btn-danger action" })
            </td>
        </tr>
        }
    </tbody>
</table>
