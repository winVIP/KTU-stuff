@model IEnumerable<vytkun.ViewModels.RemejasListViewModel>

@{
    ViewBag.Title = "Remejai";
}

<h2>Uzsakovai</h2>

<p>
    @Html.ActionLink("Naujas Remejas", "Create", "Remejas", new { @class = "btn btn-success" })
</p>
<table class="table table-striped datatable">
    <thead>
        <tr style="background-color: lightblue">
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vardas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pavarde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefonas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kompanija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.el_pastas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adresas)
            </th>
            <th style="width: 18%"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vardas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pavarde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefonas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kompanija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.el_pastas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adresas)
            </td>
            <td>
                @Html.ActionLink("Redaguoti", "Edit", new { id = item.id }, new { @class = "btn btn-primary action" })
                @Html.ActionLink("Šalinti", "Delete", new { id = item.id }, new { @class = "btn btn-danger action" })
            </td>
        </tr>
        }
    </tbody>
</table>
