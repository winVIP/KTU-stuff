@model IEnumerable<vytkun.ViewModels.UzduotisListViewModel>

@{
    ViewBag.Title = "Uzduotys";
}

    <h2>Uzduotys</h2>

<table class="table table-striped datatable">
    <thead>
        <tr style="background-color: lightblue">
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pavadinimas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nuo_kada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.iki_kada)
            </th>
            <th style="width: 18%"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pavadinimas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nuo_kada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iki_kada)
            </td>
        </tr>
        }
    </tbody>
</table>
