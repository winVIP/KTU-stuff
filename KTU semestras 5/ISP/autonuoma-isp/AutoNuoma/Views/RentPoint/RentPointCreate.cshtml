			@Html.LabelFor(model => model.WorkingDays, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.WorkingDays, new SelectList(new[] { "I II III IV V", "I II III IV", "I II III IV V VI VII" }), htmlAttributes: new { @class = "form-control", id = "start" })
				@Html.ValidationMessageFor(model => model.WorkingDays, "", new { @class = "text-danger" })
			</div>
		</div>


		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
