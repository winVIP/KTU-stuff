@model IEnumerable<AutoNuoma.Models.Request>

@{
    ViewBag.Title = "RequestHistory";
}

@* Need to check if user or admin *@

<h2>RequestHistory</h2>

<table class="table">
    <tr>
        <th>
            Pradžios data
        </th>
        <th>
            Pabaigos data
        </th>
        <th>
            Ar patvirtintas
        </th>
        <th>
            Ar sumokėta
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartingDate.ToString().Split(' ')[0])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndingDate.ToString().Split(' ')[0])
            </td>
            @if (item.IsConfirmed)
            {
                <td>Taip</td>
            }
            else
            {
                <td>Ne</td>
            }
            @if (item.IsPaid)
            {
                <td>Taip</td>
            }
            else
            {
                <td>Ne</td>
            }
            <td>
                @Html.ActionLink(
                    linkText: "Redaguoti",
                    actionName: "RequestEdit",
                    controllerName: "Request",
                    routeValues: new { id = item.Id },
                    htmlAttributes: null
                ) |
                @Html.ActionLink(
                    linkText: "Detaliau",
                    actionName: "RequestDetails",
                    controllerName: "Request",
                    routeValues: new { id = item.Id },
                    htmlAttributes: null
                ) |
                @Html.ActionLink(
                    linkText: "Ištrinti",
                    actionName: "Delete",
                    controllerName: "Request",
                    routeValues: new { id = item.Id },
                    htmlAttributes: null
               )

            </td>
        </tr>
    }

</table>
